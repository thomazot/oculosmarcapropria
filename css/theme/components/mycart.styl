.mycart
    position: relative

    .btn--remove
        &:before
            display: none

        &:after
            content: '+'
            display: flex
            justify-content: center
            align-items: center
            width: 17px
            height: 17px
            border-radius: 50%
            background: #898989
            color: #fff
            transform: rotate(45deg)
            font-size: 18px
            font-weight: 300

    &:hover
        z-index: 100

        .mycart__header a
            background: none

    &__header
        padding: 0

        .ico
            width: 30px
            height: 30px
            fill: color2_bg

        a
            display: flex
            justify-content: center
            align-items: center
            padding: 10px

    &__content
        > .title
            display: none

        .item-options
            display: flex
            flex-flow: row wrap
            font-size: 11px
            text-transform: uppercase

            dt, dd
                font-weight: regular
                color: color1_bg

            dt
                flex: 0 0 auto
                margin-right: 3px

                &:after
                    content: ': '

            dd
                flex: 1
                min-width: 0

                &:not(:last-child)
                    margin-bottom: 0

    &__totals
        display: flex
        justify-content: space-between
        align-items: center
        padding-top: 10px

        .price-box-avista, .price-box-parcelado, .regular-price .label
            display: none

        .regular-price
            .price
                font-size: 15px
                font-weight: bold
                color: color2_bg

        .title
            font-size: 15px
            font-weight: regular
            margin: 0

            &:before
                content: 'Subtotal: '

            span
                display: none

    &__actions
        margin: 20px 0 0

        .editar
            display: none

        .finalizar
            font-size: 13px
            font-weight: bold
            background: #ff6c00
            color: #fff
            text-transform: uppercase
            text-align: center

            &:before
                content: 'Ir para o carrinho'

            span
                display: none

    &__details
        display: flex
        flex-flow: column nowrap

        .price
            order: 1
            font-size: 15px
            font-weight: bold
            color: color2_bg

    &__qtd
        order: 2
        font-size: 12px
        font-weight: regular
        color: #898989

    &__name
        order: 0
        margin-bottom: 5px
        line-height: 1

        a
            font-size: 15px
            font-weight: regular
            line-height: 1

    &__item
        border-bottom: solid 1px #e9e9e9

@media (min-width: 993px)
    .mycart
        &__content
            box-shadow: 0px 5px 5px 0px rgba(8, 8, 8, 0.12)
            width: 350px