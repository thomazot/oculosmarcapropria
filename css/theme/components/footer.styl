.footer
    font-size: 13px
    font-weight: regular
    line-height: 1.3
    color: #898989

    &-container
        background: #f1f1f1

    &__title
        font-size: 14px
        font-weight: bold
        text-transform: uppercase
        color: color1_bg
        padding: 10px 0

    &__content
        display: none
        padding: 10px 0

    // &__email
    .mymenu
        .a--0
            font-size: 13px
            font-weight: regular
            color: #898989

    &__box
        + .footer__box
            border-top: solid 1px #e1e1e1

        &:hover
            .footer__content
                display: block

        &--about, &--contact
            .footer__content
                display: block

        &--contact
            .ico
                width: 20px
                height: 20px
                fill: color2_bg
                margin-right: 5px

            .footer__content
                > div
                    display: flex
                    justify-content: flex-start
                    align-items: center
                    padding: 7px 0

    .pays, .ships, .certs
        &__list
            justify-content: flex-start

@media (min-width: 993px)
    .footer
        display: flex
        flex-flow: row wrap
        word-break: break-all
        padding: 10px 0 20px
        width: viewport
        max-width: 100%

        &__content
            display: block

        &__box
            padding: 10px

            + .footer__box
                border: 0

            &--about, &--payment
                width: 42%

            &--contact, &--security
                width: 26%

            &--institutional, &--buy
                width: 16%

            &--send
                width: 32%

            &--payment, &--security, &--send
                display: flex
                aling-items: center
                justify-content: flex-start
                word-break: normal

                .footer__title
                    margin-right: 20px
                    display: flex
                    align-items: center

                .flex
                    margin: 0

                    > *
                        padding: 2px

                .footer__content
                    display: flex
                    align-items: center

            &--send
                .flex > *
                    padding: 2px 10px
